<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>controllers.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AcademicServlet</servlet-name>
        <servlet-class>controllers.AcademicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AcademicServlet</servlet-name>
        <url-pattern>/AcademicProfile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClassListServlet</servlet-name>
        <servlet-class>controllers.ClassListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClassListServlet</servlet-name>
        <url-pattern>/my-classes</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AvailableClasses</servlet-name>
        <servlet-class>controllers.ClassListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AvailableClasses</servlet-name>
        <url-pattern>/AvailableClasses</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddClass</servlet-name>
        <servlet-class>controllers.AcademicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddClass</servlet-name>
        <url-pattern>/addClass</url-pattern>
    </servlet-mapping>
</web-app>
